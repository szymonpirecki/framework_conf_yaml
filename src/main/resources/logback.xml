<configuration scan="true">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] [%highlight(%level)] %boldRed(%logger{36}) - %highlight(%msg%n)</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.hc.client5.http" level="OFF"/>
    <logger name="o.a.h.c.h.i" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>